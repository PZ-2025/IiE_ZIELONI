<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.projektzielonifx.settings.ThemeSettingsController"
            prefHeight="150.0" prefWidth="300.0">
    <VBox spacing="15" alignment="CENTER" AnchorPane.topAnchor="20.0"
          AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <Label styleClass="section-header" text="Appearance Settings" />

        <HBox spacing="15" alignment="CENTER_LEFT">
            <Label text="Dark Mode:" />
            <ToggleButton fx:id="darkModeToggle" text="Enable Dark Mode"
                          onAction="#onDarkModeToggle" />
        </HBox>

        <Button styleClass="login-button" text="Apply Changes"
                onAction="#onApplyChanges" />
    </VBox>
</AnchorPane>